generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model role {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  active      Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model user_role {
  id      Int     @id @default(autoincrement())
  user_id Int
  app_id  Int
  role_id Int
  active  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
