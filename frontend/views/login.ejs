<%- include('parties/head.ejs') %>
</head>

<body class="min-h-screen bg-[#030814] text-green-300 p-4">

    <!-- ================= NAV ================= -->
<%- include('parties/nav.ejs') %>

    <!-- ================= LOGIN FORM ================= -->
    <div class="flex items-center justify-center min-h-[80vh]">

        <div class="w-full max-w-md bg-[#0a0f1f] border border-green-400/40 rounded-xl p-6 shadow-xl">

            <!-- Terminal Header -->
            <div class="flex items-center space-x-2 mb-6">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
                <span class="ml-3 text-green-300 tech-font">terminal:~$ ./login</span>
            </div>

            <h1 class="text-2xl tech-font text-green-300 text-center mb-6">
                Authenticate to Continue
            </h1>

            <% if (errors.length > 0) { %>
                <div class="mb-4 p-2 border border-red-500/60 rounded bg-red-900/20 text-red-400">
                    <% errors.forEach(err=> { %>
                        <p>
                            <%= err%>
                        </p>
                        <% }) %>
                </div>
                <% } %>

                    <form action="/login" method="POST" class="space-y-4">

                        <div>
                            <label class="text-green-400">Email</label>
                            <input type="email" name="email" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-green-400/40 rounded
                               text-green-200 focus:outline-none focus:border-green-400" placeholder="user@example.com" value="<%= postData.email ? postData.email : '' %>"
                                required />
                        </div>

                        <div>
                            <label class="text-green-400">Password</label>
                            <input type="password" name="password" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-green-400/40 rounded
                               text-green-200 focus:outline-none focus:border-green-400" placeholder="••••••••"
                                 required/>
                        </div>

                        <button class="w-full mt-4 px-4 py-2 border border-green-400 text-green-300 rounded-lg
                           hover:bg-green-800/20 transition tech-font">
                            ./login
                        </button>
                    </form>

                    <div class="text-center text-green-400 mt-6">
                        Need an account?
                        <a href="/signup" class="text-blue-400 hover:underline tech-font">./signup</a>
                    </div>
        </div>

    </div>

</body>

</html>