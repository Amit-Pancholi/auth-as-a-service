<%- include("../parties/head", { title: "Create Role" }) %>

    <style>
        .nav-active {
            color: #22c55e !important;
            font-weight: 600;
        }

        .nav-hover:hover {
            color: #22c55e;
        }
    </style>
    </head>

    <body class="bg-[#0d1117] text-gray-200">

        <!-- TOP NAV -->
        <%- include("../parties/nav.ejs",{title:"create_role"}) %>

            <div class="flex w-full">

                <!-- SIDE NAV -->
                <%- include("../parties/dash-side-nav.ejs",{activeSide:"roles"}) %>

                    <!-- MAIN CONTENT -->
                    <main class="flex-1 p-10">

                        <!-- HEADER -->
                        <div class="flex justify-between items-center mb-8">
                            <h1 class="text-3xl font-bold text-green-400">Create Role</h1>

                            <a href="/dashboard/Roles" class="border border-blue-400/50 text-blue-300 px-4 py-1.5 rounded-md tech-font
                      hover:bg-blue-900/20 hover:border-blue-400 transition-all">
                                ./back
                            </a>
                        </div>

                        <!-- CREATE ROLE CARD -->
                        <div class="bg-[#161b22] p-8 rounded-2xl border border-gray-700 max-w-3xl mx-auto shadow-xl">

                            <h2 class="text-xl text-green-300 tech-font mb-4">
                                Assign Role to: <span class="text-blue-400">
                                    <%= app_name %>
                                </span>
                            </h2>

                            <% if (errors && errors.length> 0) { %>
                                <div class="mb-4 p-3 border border-red-500 rounded bg-red-900/20 text-red-400">
                                    <% errors.forEach(err=> { %>
                                        <p>
                                            <%= err %>
                                        </p>
                                        <% }) %>
                                </div>
                                <% } %>

                                    <!-- CREATE ROLE FORM -->
                                    <form action="/dashboard/Roles/created" method="POST" class="space-y-6">

                                        <!-- HIDDEN APP ID -->
                                        <input type="hidden" name="app_id" value="<%= app_id %>">

                                        <!-- ROLE NAME -->
                                        <div>
                                            <label class="block text-green-400 tech-font mb-1">Role Name</label>
                                            <input type="text" name="role_name" placeholder="Enter role name" class="w-full bg-gray-800 border border-gray-700 rounded px-4 py-2
                                  text-gray-100 focus:outline-none focus:border-green-400">
                                        </div>

                                        <!-- DESCRIPTION -->
                                        <div>
                                            <label class="block text-green-400 tech-font mb-1">Description</label>
                                            <textarea name="description" rows="3"
                                                placeholder="Describe the permissions, usage..." class="w-full bg-gray-800 border border-gray-700 rounded px-4 py-2
                                     text-gray-100 focus:outline-none focus:border-green-400"></textarea>
                                        </div>

                                        <!-- SUBMIT BUTTON -->
                                        <div class="pt-4">
                                            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-lg
                                   text-white font-semibold tech-font text-lg">
                                                ./create_role
                                            </button>
                                        </div>

                                    </form>

                        </div>

                    </main>
            </div>

    </body>

    </html>