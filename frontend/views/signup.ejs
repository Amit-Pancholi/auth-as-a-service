<%- include('parties/head.ejs') %>
</head>

<body class="min-h-screen bg-[#030814] text-green-300 p-4">

    <!-- ================= NAV ================= -->
<%- include('parties/nav.ejs') %>

    <!-- ================= SIGNUP FORM ================= -->
    <div class="flex items-center justify-center min-h-[80vh]">

        <div class="w-full max-w-lg bg-[#0a0f1f] border border-green-400/40 rounded-xl p-6 shadow-xl">

            <!-- Terminal Header -->
            <div class="flex items-center space-x-2 mb-6">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
                <span class="ml-3 text-green-300 tech-font">terminal:~$ ./signup</span>
            </div>

            <h1 class="text-2xl tech-font text-green-300 text-center mb-6">
                Create Your Account
            </h1>

            <!-- ERRORS -->
            <% if (errors.length> 0) { %>
                <div class="mb-4 p-2 border border-red-500/60 rounded bg-red-900/20 text-red-400">
                    <% errors.forEach(err=> { %>
                        <p>
                            <%= err%>
                        </p>
                        <% }) %>
                </div>
                <% } %>

                    <form action="/signup" method="POST" class="space-y-4">

                        <!-- FIRST + LAST NAME -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="text-green-400">First Name</label>
                                <input type="text" name="firstName" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-green-400/40 rounded
                                   text-green-200 focus:outline-none focus:border-green-400" placeholder="John" value="<%= postData.firstName || '' %>"
                                    required />
                            </div>

                            <div>
                                <label class="text-green-400">Last Name</label>
                                <input type="text" name="lastName" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-green-400/40 rounded
                                   text-green-200 focus:outline-none focus:border-green-400" placeholder="Doe" value="<%= postData.lastName || '' %>"
                                    required />
                            </div>
                        </div>

                        <!-- EMAIL (BLUE THEME) -->
                        <div>
                            <label class="text-blue-400">Email</label>
                            <input type="email" name="email" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-blue-400/40 rounded
                               text-blue-200 placeholder-blue-300" placeholder="postData@example.com" value="<%= postData.email || '' %>"
                                required />
                        </div>

                        <!-- MOBILE -->
                        <div>
                            <label class="text-green-400">Mobile Number</label>
                            <input type="text" name="mobileNumber" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-green-400/40 rounded
                               text-green-200 focus:outline-none focus:border-green-400" placeholder="+91XXXXXXXXXX" value="<%= postData.mobileNumber || '' %>"
                                required />
                        </div>

                        <!-- APP NAME (BLUE THEME) -->
                        <div>
                            <label class="text-blue-400">App Name</label>
                            <input type="text" name="app" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-blue-400/40 rounded
                               text-blue-200 placeholder-blue-300
                               focus:outline-none focus:border-blue-400" placeholder="my-cool-app" value="<%= postData.app || '' %>" required />
                        </div>

                        <!-- DESCRIPTION -->
                        <div>
                            <label class="text-green-400">Description</label>
                            <textarea name="description" rows="3" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-green-400/40 rounded
                               text-green-200 focus:outline-none focus:border-green-400"
                                placeholder="Describe your app or use-case..."><%= postData.description || '' %></textarea>
                        </div>

                        <!-- PASSWORD (RED THEME) -->
                        <div>
                            <label class="text-red-400">Password</label>
                            <input type="password" name="password" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-red-400/40 rounded
                               text-red-200 placeholder-red-300
                               focus:outline-none focus:border-red-400" placeholder="••••••••" required />
                        </div>

                        <!-- CONFIRM PASSWORD (RED THEME) -->
                        <div>
                            <label class="text-red-400">Confirm Password</label>
                            <input type="password" name="confirmPassword" class="w-full mt-1 px-3 py-2 bg-[#050912] border border-red-400/40 rounded
                               text-red-200 placeholder-red-300
                               focus:outline-none focus:border-red-400" placeholder="••••••••" required />
                        </div>

                        <!-- SUBMIT -->
                        <button class="w-full mt-4 px-4 py-2 border border-blue-400 text-blue-300 rounded-lg
                           hover:bg-blue-800/20 transition tech-font">
                            ./signup
                        </button>
                    </form>

                    <div class="text-center text-green-400 mt-6">
                        Already registered?
                        <a href="/login" class="text-blue-400 hover:underline tech-font">./login</a>
                    </div>

        </div>

    </div>

</body>

</html>