    <!-- ================= 404 CONTENT ================= -->
    <div class="flex items-center justify-center min-h-[70vh]">

        <div class="max-w-xl w-full bg-[#0a0f1f] border border-red-500/40 rounded-xl p-6 shadow-xl">

            <!-- Terminal Header -->
            <div class="flex items-center space-x-2 mb-6">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
                <span class="ml-3 text-red-400 tech-font">terminal:~$ ./error</span>
            </div>

            <!-- Large Error Code -->
            <h1 class="text-5xl font-bold tech-font text-red-500 text-center mb-4">
                404
            </h1>

            <h2 class="text-2xl tech-font text-green-300 text-center mb-6">
                Page Not Found
            </h2>

            <!-- Terminal-style message -->
            <div class="bg-[#060b17] border border-green-400/40 rounded p-4 tech-font text-green-200">

                <pre class="whitespace-pre-wrap text-sm">
root@AaaS:~$ access /requested/resource
ERROR: resource not found (code: 404)

Possible reasons:
 - The page has been moved
 - The route does not exist
 - You mistyped the URL
 - Or maybe you're exploring the wrong directory :)
</pre>

            </div>

            <!-- Buttons -->
            <div class="flex justify-center space-x-4 mt-6">
                <a href="/" class="px-4 py-2 border border-green-400 text-green-300 
                   rounded-lg hover:bg-green-800/20 transition tech-font">
                    ./go-home
                </a>

                <a href="/login" class="px-4 py-2 border border-blue-400 text-blue-300 
                   rounded-lg hover:bg-blue-800/20 transition tech-font">
                    ./login
                </a>
            </div>
        </div>

    </div>

