generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Client {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
  email      String @unique
  mobile_No  String @unique  // <-- better as String, not Int
  password   String
  active     Boolean @default(true)
}

model Logout_Token {
  id      Int     @id @default(autoincrement())
  token   String
}

model App {
  id           Int      @id  @default(autoincrement())
  app_name     String
  client_id    Int
  description  String
  secret       String  @default("empty")
  active     Boolean @default(true)
}
